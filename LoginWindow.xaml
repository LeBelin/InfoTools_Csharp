<Window x:Class="InfoTools.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion" Height="336" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FFF7F9FC">
        <!-- Full background -->
        <Grid Margin="20">
            <!-- Contenu avec un "padding" intérieur -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Logo -->
                <RowDefinition Height="Auto"/>
                <!-- Email -->
                <RowDefinition Height="Auto"/>
                <!-- Password -->
                <RowDefinition Height="Auto"/>
                <!-- Button -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <Image Source="images/logo.png"
               Width="166" Height="80"
               Grid.Row="0"
               Margin="27,0,0,10"
               HorizontalAlignment="Left" Grid.Column="1"/>

            <!-- Email -->
            <TextBlock Text="Email"
                   FontWeight="SemiBold"
                   VerticalAlignment="Center"
                   Margin="0,10"
                   Grid.Row="1" Grid.Column="0"/>
            <TextBox x:Name="EmailTextBox"
                 Width="220" Height="30"
                 Padding="8,4"
                 Background="White"
                 BorderBrush="#FFCBD5E1"
                 BorderThickness="1"
                 Margin="10,10"
                 Grid.Row="1" Grid.Column="1"/>

            <!-- Mot de passe -->
            <TextBlock Text="Mot de passe"
                   FontWeight="SemiBold"
                   VerticalAlignment="Center"
                   Margin="0,10"
                   Grid.Row="2" Grid.Column="0"/>
            <PasswordBox x:Name="PasswordBox"
                     Width="220" Height="30"
                     Padding="8,4"
                     Background="White"
                     BorderBrush="#FFCBD5E1"
                     BorderThickness="1"
                     Margin="10,10"
                     Grid.Row="2" Grid.Column="1"/>

            <Button Content="Se connecter"
        Width="140" Height="40"
        HorizontalAlignment="Center"
        Grid.Row="3" Grid.ColumnSpan="2"
        Margin="0,20,0,0"
        Click="LoginButton_Click"
        Foreground="White"
        FontWeight="Bold">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="buttonBorder"
                    CornerRadius="20"
                    Background="#FF1967D2"
                    BorderBrush="#FF1967D2"
                    BorderThickness="0"
                    SnapsToDevicePixels="True"
                    Effect="{DynamicResource DropShadow}">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="10,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="buttonBorder" Property="Background" Value="#FF135BC2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>


            <!-- Drop Shadow Resource -->
            <Grid.Resources>
                <DropShadowEffect x:Key="DropShadow"
                              BlurRadius="10"
                              ShadowDepth="2"
                              Color="#55000000"
                              Opacity="0.4"/>
            </Grid.Resources>
        </Grid>
    </Grid>
</Window>
